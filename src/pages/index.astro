---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import HomepageHeader from "../components/HomepageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import StatCard from "../components/StatCard.astro";
import { stats } from "../data/stats";
import CTAform from "../components/CTAform.astro";
import { FaCheck } from "react-icons/fa";
import CourseCard from "../components/CourseCard.astro";
import { courses } from "../data/coursesData";
---

<BaseLayout>
  <HomepageHeader slot="header" />
  <section class="lg:max-h-[20rem] px-5">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-between">
      <div class="grid grid-cols-2 w-full">
        {stats.map((stat) => <StatCard {...stat} />)}
      </div>
      <div class="lg:-translate-y-52">
        <CTAform />
      </div>
    </div>
  </section>

  <section class="py-24 px-5">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
    >
      <div class="flex-[1.5_1.5_0] w-full">
        <div
          style="height: 0px; overflow: hidden; padding-top: 56.25%; position: relative; width: 100%;"
        >
          <iframe
            style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%;"
            src="https://tube.rvere.com/embed?v=2jVkLit8I4k"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          >
          </iframe>
        </div>
      </div>
      <div class="flex flex-col flex-1 gap-5">
        <h2 class="text-5xl text-dark-blue font-extrabold leading-tight">
          Let your dreams take a flight
        </h2>
        <p class="paragraph">
          At this academy, the instructors are 100% committed to providing the
          highest quality flight training. We guarantee a supportive and
          friendly environment with a motivating professional team.
        </p>
        <ul class="grid grid-cols-2 gap-4 font-medium leading-loose">
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Beginners</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Degree</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Overseas</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Hobby</p>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section class="py-24 px-5 bg-dark-blue relative">
    <div class="max-w-7xl mx-auto text-white z-20 relative">
      <h2 class="text-5xl font-bold">
        <span class="text-red-700">Find the right</span> course for you
      </h2>
      <div
        class="grid lg:grid-cols-3 max-w-xl mx-auto lg:max-w-none gap-16 mt-10"
      >
        {courses.map((course) => <CourseCard {...course} />)}
      </div>
    </div>
    <div
      class="lg:max-w-none lg:absolute max-w-xl mx-auto mt-20 -bottom-40 left-32 right-32 bg-medium-blue pt-32 pb-24 px-20 gap-5 flex justify-between items-center flex-col lg:flex-row lg:gap-24 z-10"
    >
      <h3 class="text-dark-blue font-bold text-3xl flex-1">
        Hurry up! New courses will start on February 17, 2020
      </h3>
      <div class="flex relative flex-1 w-full">
        <input
          type="text"
          placeholder="Your email"
          class="px-5 py-4 w-full outline-1 border-gray-300 border outline-gray-400 rounded-full"
        />
        <button
          type="submit"
          class="btn-dark-blue px-8 absolute right-0 py-4 top-[1px]"
        >
          Subscribe
        </button>
      </div>
    </div>
  </section>

  <section class="pb-24 px-5 pt-52"></section>
</BaseLayout>

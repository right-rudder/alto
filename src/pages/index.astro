---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import HomepageHeader from "../components/HomepageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import StatCard from "../components/StatCard.astro";
import { stats } from "../data/stats";
import CTAform from "../components/CTAform.astro";
import { FaCheck } from "react-icons/fa";
---

<BaseLayout>
  <HomepageHeader slot="header" />
  <section class="lg:max-h-[20rem] px-5">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-between">
      <div class="grid grid-cols-2 w-full">
        {stats.map((stat) => <StatCard {...stat} />)}
      </div>
      <div class="lg:-translate-y-52">
        <CTAform />
      </div>
    </div>
  </section>

  <section class="py-24 px-5">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
    >
      <div class="flex-[1.5_1.5_0] w-full">
        <div
          style="height: 0px; overflow: hidden; padding-top: 56.25%; position: relative; width: 100%;"
        >
          <iframe
            style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%;"
            src="https://tube.rvere.com/embed?v=2jVkLit8I4k"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          >
          </iframe>
        </div>
      </div>
      <div class="flex flex-col flex-1 gap-5">
        <h2 class="text-5xl text-dark-blue font-extrabold leading-tight">
          Let your dreams take a flight
        </h2>
        <p class="text-gray-500 font-medium leading-loose">
          At this academy, the instructors are 100% committed to providing the
          highest quality flight training. We guarantee a supportive and
          friendly environment with a motivating professional team.
        </p>
        <ul class="grid grid-cols-2 gap-4 font-medium leading-loose">
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Beginners</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Degree</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Overseas</p>
          </li>
          <li class="flex gap-2 items-center">
            <div class="p-2 bg-medium-blue rounded-full">
              <FaCheck className="size-3" />
            </div>
            <p>Hobby</p>
          </li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>

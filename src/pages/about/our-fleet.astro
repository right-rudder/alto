---
import Header from "../../components/Header.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
const headerData = {
  title: "Our Fleet",
  headerImage: "/src/assets/alto-fleet.jpg",
  headerAlt: "Alto fleet",
};
import fleet from "../../data/fleet";
import PlaneCard from "../../components/PlaneCard.astro";
---

<BaseLayout 
  siteTitle="Our Fleet | Flight School in Bethany, OK"
  siteDescription ="Alto Flight Academy proudly boasts a range of aircraft for your flight training needs.  From the battle tested Cessna 172 and 152, to our multi-engine Beechcraft Baron, we have aircraft to take you from zero to hero.  Start with your private, and continue on with advance training in instrument, commercial, multi engine, CFI, and ATP."
>
  <Header slot="header" data={headerData} />
  <section class="py-12 px-5">
    <div class="max-w-7xl mx-auto flex flex-col gap-20">
      {fleet.map((plane) => <PlaneCard {...plane} />)}
    </div>
  </section>
</BaseLayout>

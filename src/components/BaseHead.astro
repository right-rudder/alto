---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  robots?: string;
  articleSchema?: object;
  breadcrumbSchema?: object;
  faqSchema?: object;
  courseSchema?: object;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description,
  keywords,
  image = "/Alto-OG-image.png",
  robots = "index, follow",
  articleSchema,
  breadcrumbSchema,
  faqSchema,
  courseSchema,
} = Astro.props;
---


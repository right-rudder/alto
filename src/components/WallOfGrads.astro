---
import { Image } from "astro:assets";
import ImageComp from "./ImageComp.astro";
const Wall1 =
  "/src/assets/wall-of-students-passing-checkride-near-sectional-alto flight academy-oklahoma-flight-school.jpg";
const Wall2 = "/src/assets/wall-of-students-passing-checkride-by-sectional-alto flight academy-oklahoma-commercial-pilot.jpg";
const Wall3 = "/src/assets/wall-of-students-passing-checkride-alto flight academy-oklahoma city-multi-engine-rating.jpg";
---

<section
  class="mb-0 py-12 lg:py-24 sm:py-10 bg-red-700 relative max-w-[80rem] mx-auto lg:mb-20"
>
  <h2
    class="text-center font-semibold px-5 mb-10 sm:mb-32 text-3xl lg:text-5xl text-white"
  >
    Join the thousands of students that have trusted Alto Flight Academy with
    their pilot training
  </h2>
  <div class="gap-y-24 gap-x-10 px-10 grid place-items-center">
    <ImageComp
      imagePath={Wall1}
      imageAlt="Alto Flight Academy Students after completing checkride"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
    <ImageComp
      imagePath={Wall2}
      imageAlt="Alto Flight Academy Students after completing checkride"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
    <ImageComp
      imagePath={Wall3}
      imageAlt="Alto Flight Academy Students after completing checkride"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
  </div>
</section>


---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, KEYWORDS } from "../consts";
import "@fontsource-variable/raleway";
import "@fontsource/poppins";
import Navbar from "../components/Navbar";
const { pathname } = Astro.url;
const {
  siteTitle,
  siteDescription,
  keywords,
  ogImage,
  robots,
  articleSchema,
  breadcrumbSchema,
  faqSchema,
  courseSchema,
} = Astro.props;
import ChatWidget from "../components/ChatWidget.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead
      title={siteTitle || SITE_TITLE}
      description={siteDescription || SITE_DESCRIPTION}
      keywords={keywords || KEYWORDS}
      image={ogImage || "/Alto-OG-image.png"}
      robots={robots}
      articleSchema={articleSchema}
      breadcrumbSchema={breadcrumbSchema}
      faqSchema={faqSchema}
      courseSchema={courseSchema}
    />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MH5LKLTH"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Navbar pathname={pathname} client:load />
    <slot name="header" />
    <main>
      <slot />
    </main>
    <Footer />
    <ChatWidget />
  </body>
</html>
